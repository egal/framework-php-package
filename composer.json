{
    "name": "egal/framework",
    "description": "The Egal Framework.",
    "type": "library",
    "license": "Apache-2.0",
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "ext-pcntl": "*",
        "phpdocumentor/reflection-docblock": "^5.2",
        "laravel/lumen-framework": "^8.0",
        "laravel/helpers": "^1.4",
        "php-amqplib/php-amqplib": "^2.12|^3",
        "vladimir-yuldashev/laravel-queue-rabbitmq": "^11.3",
        "firebase/php-jwt": "^5.2.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.4.2",
        "phpunit/phpunit": "^8.5.8|^9.3.3",
        "squizlabs/php_codesniffer": "^3.6",
        "slevomat/coding-standard": "^7.0"
    },
    "autoload": {
        "files": [
            "src/Core/helpers.php",
            "src/Model/helpers.php"
        ],
        "psr-4": {
            "Egal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Egal\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
