{
    "name": "egal/framework",
    "description": "The Egal Framework.",
    "type": "library",
    "license": "Apache-2.0",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-pcntl": "*",
        "laravel/lumen-framework": "^9",
        "laravel/helpers": "^1.5",
        "phpdocumentor/reflection-docblock": "^5.3",
        "php-amqplib/php-amqplib": "^v3.2",
        "firebase/php-jwt": "^v5.5.1",
        "centrifugal/phpcent": "~4.0",
        "league/flysystem-aws-s3-v3": "^3"
    },
    "require-dev": {
        "mockery/mockery": "^1.5.1",
        "phpunit/phpunit": "^8.5.8|^9.3.3",
        "squizlabs/php_codesniffer": "^3.7",
        "slevomat/coding-standard": "^8.4"
    },
    "autoload": {
        "files": [
            "src/Core/helpers.php",
            "src/Model/helpers.php"
        ],
        "psr-4": {
            "Egal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Egal\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
